<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
<h5>name</h5>
<%= current_user.name %>
<h5>introduction</h5>
<%= current_user.introduction %>
<%= link_to "create", edit_user_path(current_user.id), class: "button-class" %>

<%= form_with model: new_book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>