<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
<h5>name</h5>
<%= current_user.name %>
<h5>introduction</h5>
<%= current_user.introduction %>
<%= link_to "create", edit_user_path(current_user.id), class: "button-class" %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>

